{
    "builders": [
        {
            "type": "amazon-ebs",
            "profile": "{{user `profile`}}",
            "region": "{{user `region`}}",
            "source_ami": "ami-06d94a781b544c133",
            "instance_type": "{{user `instance_type`}}",
            "force_deregister": "true",
            "force_delete_snapshot": "true",
            "ssh_username": "ubuntu",
            "ami_name": "debezium",
            "ami_regions": [
                "{{user `region`}}"
            ],
            "tags": {
                "Name": "debezium_instance"
            }
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "inline": [
                "echo 'Waiting for cloud-init'; while [ ! -f /var/lib/cloud/instance/boot-finished ]; do sleep 1; done; echo 'Done'",
                "echo set debconf to Noninteractive",
                "echo 'debconf debconf/frontend select Noninteractive' | sudo debconf-set-selections",
                "sudo apt-get update",
                "sudo apt install jq openjdk-11-jre openjdk-11-jdk -y",
                "curl https://downloads.apache.org/kafka/3.4.0/kafka_2.12-3.4.0.tgz -o ~/kafka.tgz",
                "mkdir ~/kafka && cd ~/kafka",
                "tar -xvzf ~/kafka.tgz --strip 1"
            ]
        },
        {
            "type": "file",
            "source": "./files/debezium.service",
            "destination": "/home/ubuntu/debezium.service"
        },
        {
            "type": "file",
            "source": "./files/registry.service",
            "destination": "/home/ubuntu/registry.service"
        },
        {
            "type": "file",
            "source": "./files/connect-distributed.properties",
            "destination": "/home/ubuntu/kafka/config/connect-distributed.properties"
        },
        {
            "type": "file",
            "source": "./files/connector.json",
            "destination": "/home/ubuntu/connector.json"
        },
        {
            "type": "file",
            "source": "./files/apicurio-registry-distro-connect-converter-2.4.1.Final.tar.gz",
            "destination": "/home/ubuntu/apicurio-registry-distro-connect-converter-2.4.1.Final.tar.gz"
        },
        {
            "type": "file",
            "source": "./files/apicurio-registry-storage-kafkasql-2.4.1.Final-runner.jar",
            "destination": "/home/ubuntu/apicurio-registry-storage-kafkasql-2.4.1.Final-runner.jar"
        },
        {
            "type": "file",
            "source": "./files/start_registry.sh",
            "destination": "/home/ubuntu/start_registry.sh"
        },
        {
            "type": "file",
            "source": "./files/generate_data.sh",
            "destination": "/home/ubuntu/generate_data.sh"
        }
    ]
}